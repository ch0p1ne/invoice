<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="buttonCircleStyle" TargetType="Button">
        <!-- 1. Valeur par défaut du Background -->
        <Setter Property="Background" Value="#CFEFE0"/>
        <Setter Property="Foreground" Value="#202020"/>
        <Setter Property="Margin" Value="0,0,100,0"/>
        <Setter Property="FontFamily" Value="{DynamicResource fontBase}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!-- 2. Lier le Background du Border au Background du Button -->
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 x:Name="RoundShape"
                                 Cursor="Hand"
                                 Stroke="{TemplateBinding BorderBrush}"
                                 StrokeThickness="{TemplateBinding BorderThickness}">

                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RoundShape" Property="Fill" Value="#CFEFE0"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="RoundShape" Property="Fill" Value="RoyalBlue"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="RoundShape" Property="Fill" Value="LightGray"/>
                            <Setter Property="Foreground" Value="Gray"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>