<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ParentItem" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{DynamicResource fontBase}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="#F6F0FF" />
        <Setter Property="Foreground" Value="#202020" />
        <Setter Property="Width" Value="210" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="2" Padding="10" Margin="0,7,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Height="20" Width="20" Margin="0,0,12,0" />
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#80C2BC"/>
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="Foreground" Value="#202020"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#CFEFE0"/>
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="#202020"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    <Style x:Key="ChildrenItem" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{DynamicResource fontBase}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Background" Value="#F6F6F6" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="Margin" Value="0,5,0,0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="170" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="2" Padding="7">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Height="20" Width="20" Margin="0,0,15,0"/>
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#80C2BC"/>
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="Foreground" Value="#000000"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#CFEFE0"/>
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="#000000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>