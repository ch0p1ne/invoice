<UserControl x:Class="invoice.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:invoice.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="700">

    <PasswordBox x:Name="txtPassword" Width="210" HorizontalAlignment="Left" BorderThickness="0,0,0,2" Padding="35,0,0,0" VerticalContentAlignment="Center" FontSize="14" CaretBrush="LightGray" BorderBrush="#04AE9C" FontFamily="{StaticResource fontBase}"
                 FontWeight="Normal">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/invoice;component/Assets/img/user-password01.png" Stretch="None" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
