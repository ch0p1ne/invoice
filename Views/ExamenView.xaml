<UserControl x:Class="invoice.Views.ExamenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:invoice.ViewModels"
             xmlns:customcontrols="clr-namespace:invoice.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:view="clr-namespace:invoice.Views"
             x:Name="ExamenControl"
             FontFamily="{StaticResource fontBase}"
             xmlns:behevior="http://schemas.microsoft.com/xaml/behaviors">
    <UserControl.Resources>

        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="LightBlue" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
    </UserControl.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" Grid.Row="0">
            <TextBlock Text="{Binding Title}"
                       FontSize="24" 
                       Margin="100,0,0,0"
                       FontFamily="{StaticResource fontSen}" 
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Style="{StaticResource buttonCrudStyle}">
                <Button.Content>
                    <WrapPanel VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               IsHitTestVisible="False">

                        <Image Source="/Assets/icons/add.png"
                               Height="32"
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Ajouter"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="DarkOliveGreen"
                                VerticalAlignment="Center"/>
                    </WrapPanel>
                </Button.Content>
                
                <behevior:Interaction.Triggers>
                    <behevior:EventTrigger EventName="Click">
                        <behevior:InvokeCommandAction Command="{Binding AddExamenPageCommand}" />
                    </behevior:EventTrigger>
                </behevior:Interaction.Triggers>
            </Button>

        </StackPanel>

        <ContentControl Grid.Row="2" Content="{Binding CurrentCrudOperation}"
                                    ContentTemplateSelector="{StaticResource StringTemplateSelector}"></ContentControl>
    </Grid>
</UserControl>
