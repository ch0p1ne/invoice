<UserControl x:Class="invoice.Views.ExamenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:invoice.ViewModels"
             xmlns:customcontrols="clr-namespace:invoice.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:view="clr-namespace:invoice.Views"
             x:Name="ExamenControl"
             FontFamily="{StaticResource fontSen}"
             xmlns:behevior="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:local="clr-namespace:invoice.Utilities.Converters"
             Style="{StaticResource Page_Style}">
    <UserControl.Resources>
        <local:TrueOrFalseToVisibility x:Key="TrueOrFalseToVisibility" />
        <local:BoolToInvertValue x:Key="BoolToInvertValue" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="LightBlue" />
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
    </UserControl.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" Grid.Row="0">
            <TextBlock Text="{Binding Title}"
                       FontSize="24" 
                       Margin="100,0,0,0"
                       FontFamily="{StaticResource fontSen}" 
                       FontWeight="SemiBold"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                  Margin="15,0,0,0">
                        <Expander Grid.Row="0" Header=" Ajouter"
                                  ExpandDirection="Down"
                                  Width="300"
                                  Name="expButton"
                                  IsExpanded="{Binding IsExpandableAddForm}"
                                  HorizontalContentAlignment="Center">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Formulaire d'ajout">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="FontSize" Value="12" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=expButton, Path=IsExpanded}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Setter Property="FontSize" Value="13" />
                                                        <Setter Property="Foreground" Value="#202020" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                </DataTemplate>
                            </Expander.HeaderTemplate>

                            <Border VerticalAlignment="Top"
                                    BorderThickness="1"
                                    Margin="0,15,0,0"
                                    BorderBrush="#fff2ffff"
                                    CornerRadius="5">

                                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center">

                                            <WrapPanel Orientation="Vertical" 
                                                       Margin="0,0,0,0"
                                                       HorizontalAlignment="Center">
                                                <TextBlock Style="{StaticResource FieldLabel}" HorizontalAlignment="Center" FontSize="12" >Nom de l'element</TextBlock>
                                                <TextBox Style="{StaticResource MaterialTextBox}" Text="{Binding  ExamenName ,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="260"  />
                                            </WrapPanel>

                                            <WrapPanel Margin="0,0,0,15">
                                                <WrapPanel Orientation="Vertical"
                                                            HorizontalAlignment="Stretch">
                                                    <TextBlock Style="{StaticResource FieldLabel}" HorizontalAlignment="Center" FontSize="12">Reférence</TextBlock>
                                                    <TextBox  Style="{StaticResource MaterialTextBox}" Text="{Binding Reference, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="75" />
                                                </WrapPanel>

                                                <WrapPanel Orientation="Vertical"
                                                             Margin="10,0,0,0">
                                                    <TextBlock Style="{StaticResource FieldLabel}" HorizontalAlignment="Center" FontSize="12">Prix à l'unité</TextBlock>
                                                    <TextBox Style="{StaticResource MaterialTextBox}"
                                                             Text="{Binding Price, ConverterCulture=fr-GA, StringFormat={}{0:C0} ,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  Width="175" />
                                                </WrapPanel>
                                            </WrapPanel>

                                        </StackPanel>
                                        <WrapPanel Grid.Row="1"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,10,0,0">

                                            <Button Content="Tout Effacer"
                                                    Background="IndianRed"
                                                    Foreground="White"
                                                    Padding="7"
                                                    Command="{Binding ClearExamenCommand}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Margin" Value="0,0,0,0" />
                                                        <Setter Property="Width" Value="100" />
                                                        <Setter Property="Background" Value="#E7E7E7" />
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button Content="Ajouter"
                                                    Background="#008A38"
                                                    Foreground="White"
                                                    Padding="7"
                                                    Command="{Binding CreateExamenCommand}" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Margin" Value="15,0,0,0" />
                                                        <Setter Property="Width" Value="70" />
                                                        <Setter Property="Background" Value="#E7E7E7" />
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                        </WrapPanel>
                                    </Grid>

                                </ScrollViewer>
                            </Border>

                        </Expander>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel VerticalAlignment="Top" 
                                    HorizontalAlignment="Left"
                                    Margin="35,0,0,0"
                                    DataContext="{Binding SelectedItem, ElementName=listDataGrid}">
                            <WrapPanel Orientation="Vertical" Margin="0,0,0,0">
                                <TextBlock Style="{StaticResource FieldLabel}" >Nom De l'acte</TextBlock>
                                <TextBox Style="{StaticResource MaterialTextBox}" 
                                         Width="315"
                                         Text="{Binding ExamenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="7,6" 
                                         IsEnabled="{Binding DataContext.IsEditable, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BoolToInvertValue}}" HorizontalContentAlignment="Center" />
                            </WrapPanel>
                            <WrapPanel Margin="0,0,0,0">

                                <WrapPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource FieldLabel}" >Reférence</TextBlock>
                                    <TextBox Style="{StaticResource MaterialTextBox}" Width="95" Text="{Binding Reference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="7,4" IsEnabled="{Binding DataContext.IsEditable, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BoolToInvertValue}}" HorizontalContentAlignment="Center"/>
                                </WrapPanel>

                                <WrapPanel Orientation="Vertical" Margin="45,0,0,0">
                                    <TextBlock Style="{StaticResource FieldLabel}" >Prix à l'unité</TextBlock>
                                    <WrapPanel>
                                        <TextBox Style="{StaticResource MaterialTextBox}" Width="175"
                                                 Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ConverterCulture=fr-GA,StringFormat={}{0:C}}" Padding="7,4" 
                                                 IsEnabled="{Binding DataContext.IsEditable, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BoolToInvertValue}}" HorizontalContentAlignment="Center"/>
                                        <TextBlock VerticalAlignment="Center"
                                                   />
                                    </WrapPanel>

                                </WrapPanel>
                            </WrapPanel>

                            <StackPanel.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#202020" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="FontSize" Value="13" />
                                    <Setter Property="Margin" Value="0,0,0,4" />

                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#202020" />
                                    <Setter Property="Background" Value="#fdfffc" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="BorderBrush" Value="#2ec4b6" />
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="FontSize" Value="13" />

                                    <Style.Triggers>
                                        <Trigger Property="IsReadOnly" Value="False">
                                            <Setter Property="BorderBrush" Value="LightBlue" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="BorderThickness" Value="0,0,0,2" />
                                            <Setter Property="Background" Value="#E7E7E7" />
                                            <Setter Property="Foreground" Value="Black" />

                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>

                        </StackPanel>
                        <WrapPanel VerticalAlignment="Bottom" 
                                    HorizontalAlignment="Right"
                                   Margin="0,0,0,55"
                                    >
                            <Button Content="Supprimer"
                                    Background="{StaticResource SurfaceRed}"
                                    Foreground="Black"
                                    Padding="7"
                                    Command="{Binding DeleteExamCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=listDataGrid}"
                                         >
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="0,0,15,0" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryRedDark}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="Editer"
                                    Background="{StaticResource PrimaryBlue}"
                                    Foreground="White"
                                    Padding="7"
                                    Command="{Binding EditableExamCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=listDataGrid}"
                                         >
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="0,0,70,0" />
                                        <Setter Property="Width" Value="70" />
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}" />
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsEditable, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="Terminer"
                                    Background="YellowGreen"
                                    Foreground="Black"
                                    Padding="7"
                                    Command="{Binding SubmitModifieCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=listDataGrid}"
                                    >

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="0,0,70,0" />
                                        <Setter Property="MinWidth" Value="70" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Setter Property="Background" Value="#E7E7E7" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsEditable, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Value="true">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                        </WrapPanel>
                    </Grid>
                </Grid>


                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6*" />
                    </Grid.RowDefinitions>


                    <WrapPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5">
                        <TextBlock Focusable="False"
                           FontWeight="SemiBold"
                           Foreground="DarkKhaki" 
                           Text="Actes d'examen"
                           FontSize="24"/>
                    </WrapPanel>
                    <DataGrid x:Name="listDataGrid"
                      Grid.Row="1"
                              Style="{StaticResource specialDataGrid}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                      Background="Transparent"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Examens, UpdateSourceTrigger=PropertyChanged}"
                      HorizontalAlignment="Stretch"
                      MinRowHeight="25"
                      BorderThickness="0"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column" 
                      Margin="10">

                        <!-- Style pour centrer verticalement le contenu des TextBlock dans les cellules -->
                        <DataGrid.Resources>
                            <Style x:Key="CenteredTextBlock" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Setter Property="Margin" Value="10,0,0,2" />
                                <Setter Property="FontSize" Value="14" />
                            </Style>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="MinHeight" Value="30"/>
                                <Setter Property="Padding" Value="4,2"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="MinHeight" Value="40 "/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#9ECCA9" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>


                        <DataGrid.Columns>

                            <DataGridTextColumn Width="4*" Header="Acte d'examen" Binding="{Binding ExamenName}" ElementStyle="{StaticResource CenteredTextBlock}" FontWeight="SemiBold" />
                            <DataGridTextColumn Width="1*" Header="Reference" Binding="{Binding Reference}" ElementStyle="{StaticResource CenteredTextBlock}" />
                            <DataGridTextColumn Width="1*" 
                                        Header="Prix" 
                                        Binding="{Binding Price, ConverterCulture=fr-GA,StringFormat={}{0:C}}"
                                        ElementStyle="{StaticResource CenteredTextBlock}" FontWeight="SemiBold"  />

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
