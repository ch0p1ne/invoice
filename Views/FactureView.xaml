<UserControl x:Class="invoice.Views.FactureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:invoice.Views"
             xmlns:utilities="clr-namespace:invoice.Utilities"
             xmlns:converter="clr-namespace:invoice.Utilities.Converters"
             xmlns:behevior="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             FontFamily="{StaticResource fontBase}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converter:InvertBoolToVisibilityConverter x:Key="InvertBoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
            CornerRadius="15"
                Background="AliceBlue">
            
        <Grid>
            <!-- Header or navigation elements can go here -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="{Binding IsFactureIsSelected, Converter={StaticResource InvertBoolToVisibilityConverter}}"
                        Margin="0,0,15,0"
                        >
                <TextBlock Text="Détail de facture ici" 
                           FontSize="24" 
                           FontWeight="Light" 
                        />
            </StackPanel>
            
            <Grid Grid.Row="0" 
                        Visibility="{Binding IsFactureIsSelected, Converter={StaticResource BoolToVisConverter}}"
                        VerticalAlignment="Center"
                        Margin="25,0,0,0"
                        >
                <Grid.Resources>
                    <Style TargetType="Label">
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#333333" />

                    </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,2" />
                            <Style.Triggers>
                                <Trigger Property="Text" Value="Non_payer">
                                    <Setter Property="Foreground" Value="Red" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                                <Trigger Property="Text" Value="Payer">
                                    <Setter Property="Foreground" Value="Green" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style x:Key="StyledTextBorder" TargetType="{x:Type Border}">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#ADD8E6"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="5"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>

                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0FFF0"/>
                                    <Setter Property="BorderBrush" Value="#04AE9C"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    MinWidth="150"
                     Grid.Column="0">
                    
                    <WrapPanel Orientation="Vertical">
                        <Label Content="Ref."/>
                            <Border Style="{StaticResource StyledTextBorder}"
                                    >
                                <TextBlock Text="{Binding SelectedFacture.Reference}" />
                            </Border>
                        </WrapPanel>
                    <WrapPanel Orientation="Vertical">
                        <Label Content="Type de fac."/>
                            <Border Style="{StaticResource StyledTextBorder}"
        >
                                <TextBlock Text="{Binding SelectedFacture.Type}" />
                            </Border>
                        </WrapPanel>

                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Margin="5,0,0,0">

                    <WrapPanel>
                        <WrapPanel Orientation="Vertical"
                                   Width="110">
                            <Label Content="Avance"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.AmountPaid, ConverterCulture=fr-GA,StringFormat={}{0:C}}" />
                                </Border>
                         </WrapPanel>
                        
                        <WrapPanel Orientation="Vertical"
                                   Margin="0,0,0,0">
                            <Label Content="Status"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.Status}" />
                                </Border>
                            </WrapPanel>
                        <WrapPanel Orientation="Vertical"
                                   Margin="15,0,0,0">
                            <Label Content="R. à payer"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding AmountLeft, ConverterCulture=fr-Ga, StringFormat={}{0:C}}" />
                                </Border>
                            </WrapPanel>
                    </WrapPanel>

                    <WrapPanel>
                        <WrapPanel Orientation="Vertical"
                                   Width="80">
                            <Label Content="Remise (%)"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.DiscountPercent, StringFormat={}{0:P0}}"
                                               Width="30"/>
                                </Border>
                            </WrapPanel>
                        
                        <WrapPanel Orientation="Vertical"
                                   Margin="30,0,0,0">
                            <Label Content="Total HT" />
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.TotalAmountHT, ConverterCulture=fr-GA,StringFormat={}{0:C}}" />
                                </Border>
                            </WrapPanel>
                    </WrapPanel>

                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    Margin="15,0,0,0">

                        <WrapPanel Orientation="Vertical"
                                   >
                            <Label Content="Methode de paiement"/>
                            <Border Style="{StaticResource StyledTextBorder}"
        >
                                <TextBlock Text="{Binding SelectedFacture.PaymentMethod}" />
                            </Border>
                        </WrapPanel >
                    
                        <WrapPanel Orientation="Vertical"
                                   >
                            <Label Content="Date d'établissement"/>
                            <Border Style="{StaticResource StyledTextBorder}"
        >
                                <TextBlock Text="{Binding SelectedFacture.Created_at, ConverterCulture=fr-GA, StringFormat={}{0:dd/MM/yyyy HH:mm}}" />
                            </Border>
                        </WrapPanel>
                </StackPanel>
                <StackPanel
                    Grid.Column="3"
                    Margin="15,0,0,0">
                    
                    <WrapPanel
                        Orientation="Vertical">

                        <WrapPanel Orientation="Vertical">
                            <Label Content="Nom du patient"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.Patient.LastName}" />
                                </Border>
                            </WrapPanel>
                        <WrapPanel Orientation="Vertical">
                            <Label Content="Prénom"/>
                                <Border Style="{StaticResource StyledTextBorder}"
        >
                                    <TextBlock Text="{Binding SelectedFacture.Patient.FirstName}" />
                                </Border>
                            </WrapPanel>
                    </WrapPanel>
                </StackPanel>

            </Grid>

        </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style x:Key="TabButtonStyle" TargetType="{x:Type RadioButton}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="Padding" Value="7,8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                <Border x:Name="OuterBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">

                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                </Border>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#8dadf2"/>
                                    </Trigger>

                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#8dadf2"/>
                                        <Setter Property="Foreground" Value="#8dadf2"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>

                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#AAAAAA"/>
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="ButtonTabStyle"  TargetType="Button">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
                <Style x:Key="TabButtonStyle2" TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="5,5"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12"
                        Padding="{TemplateBinding Padding}"
                        HorizontalAlignment="Left">

                                    <ContentPresenter HorizontalAlignment="Left" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,0"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#D0D0D0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            
                <Border Grid.Row="0" 
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1"
                        Margin="15,5,15,5">
                    
                    <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            >

                        <RadioButton Content="Toutes" 
                                    GroupName="StatusGroup"
                                Padding="10,5" 
                                    Style="{StaticResource TabButtonStyle}"
                                Margin="0,0,0,0"
                                     IsChecked="True"
                                Command="{Binding RefreshFacturesCommand}"
                                >
                        </RadioButton>
                        <RadioButton Content="Payer" 
                                        GroupName="StatusGroup"
                                Padding="10,5" 
                                    Style="{StaticResource TabButtonStyle}"
                                Margin="0,0,0,0"
                                Command="{Binding FilterStatusFacturesCommand}"
                                     CommandParameter="{x:Static utilities:StatusType.Payer}"
                                >
                        </RadioButton>
                        <RadioButton Content="Non Payer" 
                                        GroupName="StatusGroup"
                                    Style="{DynamicResource TabButtonStyle}"
                                Padding="10,5" 
                                Margin="0,0,0,0"
                                Command="{Binding FilterStatusFacturesCommand}"
                                     CommandParameter="{x:Static utilities:StatusType.Non_payer}"
                                >
                        </RadioButton>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" 
                            Margin="15,0,15,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Style="{StaticResource TabButtonStyle2}"
                            VerticalAlignment="Center"
                        Command="{Binding MarquerPayerCommand}"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            BorderBrush="#EDEDED"
                        Background="Transparent">
                    <StackPanel Orientation="Horizontal" Width="Auto">
                        <Image Source="/Assets/icons/mark.png" Height="16" />
                        <TextBlock Text="Marqué Payé" Margin="5,0,0,0" Foreground="#333333"/>
                    </StackPanel>

                    </Button>
                    <Button Style="{StaticResource TabButtonStyle2}"
                            VerticalAlignment="Center"
                        Command="{Binding MarquerNonPayerCommand}"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            BorderBrush="#EDEDED"
                        Background="Transparent">
                        <StackPanel Orientation="Horizontal" Width="Auto">
                            <Image Source="/Assets/icons/unmark.png" Height="16" />
                            <TextBlock Text="Marqué Non Payé" Margin="5,0,0,0" Foreground="#333333"/>
                        </StackPanel>

                    </Button>
                    <Button Style="{StaticResource TabButtonStyle2}"
                            VerticalAlignment="Center"
                            ToolTip="Imprimer la facture séléctionné"
                            ToolTipService.ShowDuration="1500"
                        Command="{Binding PrintInvoiceDirectlyCommand}"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            BorderBrush="LightGray"
                        Background="#EDEDED">
                        <StackPanel Orientation="Horizontal" Width="Auto">
                        <Image Source="/Assets/icons/printer.png" Height="16" />
                    </StackPanel>

                    </Button>
                    <Button Style="{StaticResource TabButtonStyle2}"
                                VerticalAlignment="Center"
                            ToolTip="Rafraichir la liste"
                            ToolTipService.ShowDuration="1500"
                            Command="{Binding RefreshFacturesCommand}"
                                BorderThickness="1"
                                Margin="0,0,325,0"
                                BorderBrush="LightGray"
                            Background="#EDEDED">
                        <StackPanel Orientation="Horizontal" Width="Auto">
                        <Image Source="/Assets/icons/refresh.png" Height="16" />
                    </StackPanel>

                    </Button>
                <TextBox Width="300"
                         Style="{StaticResource SearchTextBoxStyle}"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         >
                    <behevior:Interaction.Triggers>
                        <behevior:EventTrigger EventName="KeyDown">
                            <behevior:InvokeCommandAction Command="{Binding SearchFacturesCommand}"
                                   PassEventArgsToCommand="True"/>
                        </behevior:EventTrigger>
                    </behevior:Interaction.Triggers>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="2" 
                        Margin="15,5,15,0">
                
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          Style="{DynamicResource specialDataGrid}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          Background="Transparent"
                          MaxHeight="435"
                          BorderThickness="0,0,0,1"
                    x:Name="dtgridView"
                    IsReadOnly="True"
                          SelectedItem="{Binding SelectedFacture, Mode=TwoWay}"
                          SelectionUnit="FullRow"
                          SelectionMode="Single"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding Factures, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0">
                    
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" 
                                                HeaderStyle="{DynamicResource DataGridColumnHeaderStyle2}"
                                                IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox  Padding="5"
                                              HorizontalAlignment="Center" 
                                              IsEnabled="True" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Reference" 
                                            MinWidth="125" 
                                            Width="*"
                                            Binding="{Binding Reference}" />
                        
                        <DataGridTextColumn Header="Type" 
                                            MinWidth="75" 
                                            Binding="{Binding Type}" />
                        
                        <DataGridTextColumn Header="Nom(s) du patient" 
                                            MinWidth="75" 
                                            Width="*"
                                            Binding="{Binding Patient.LastName}" />

                        <DataGridTextColumn Header="Total HT" 
                                            MinWidth="110" 
                                            Width="*"
                                            CellStyle="{DynamicResource DataGridCell2}"
                                            Binding="{Binding TotalAmountHT, ConverterCulture=fr-GA , StringFormat={}{0:C}}">
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Accompte" 
                                            MinWidth="110" 
                                            CellStyle="{DynamicResource DataGridCell2}"
                                            Binding="{Binding AmountPaid, ConverterCulture=fr-GA , StringFormat={}{0:C}}" />
                        
                        <!--<DataGridTextColumn Header="R. à payer" 
                                            MinWidth="95" 
                                            CellStyle="{DynamicResource DataGridCell2}"
                                            Binding="{Binding DataContext.AmountLeft, RelativeSource={RelativeSource AncestorType=DataGrid}, ConverterCulture=fr-GA , StringFormat={}{0:C}}" />-->
                        
                        <DataGridTextColumn Header="Status" 
                                            MinWidth="110" 
                                            CellStyle="{DynamicResource DataGridCell2}"
                                            Binding="{Binding Status}" />
                        
                        <DataGridTextColumn Header="Date de Création" 
                                            MinWidth="100" 
                                            Binding="{Binding Created_at, StringFormat={}{0:dd/MM/yyyy}}" 
                                            CellStyle="{DynamicResource DataGridCell2}"/>

                        <DataGridTemplateColumn Header="Action" 
                                                MinWidth="110" 
                                                HeaderStyle="{DynamicResource DataGridColumnHeaderStyle2}"
                                                CellStyle="{DynamicResource DataGridCell2}"
                                            >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                        <Button 
                                            ToolTip="Détails"
                                            ToolTipService.ShowDuration="1500"
                                            Padding="4"
                                            Cursor="Hand"
                                            Margin="0,0,5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Assets/icons/search.png"  
                                                      Width="16" 
                                                      Height="16" 
                                                      VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <Button 
                                            ToolTip="Supprimer"
                                            ToolTipService.ShowDuration="1500"
                                            Margin="0,0,5,0"
                                            Cursor="Hand"
                                            Padding="4"
                                                Command="{Binding DataContext.DeleteFactureCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Assets/icons/trash.png"  
                                                      Width="16" 
                                                      Height="16" 
                                                      VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <Button 
                                            ToolTip="Apercu"
                                            ToolTipService.ShowDuration="1500"
                                            Margin="0,0,5,0"
                                            Cursor="Hand"
                                            Padding="4"
                                                Command="{Binding DataContext.PreviewInvoiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Assets/icons/viewgreen.png"  
                                                      Width="16" 
                                                      Height="16" 
                                                      VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
