<Window x:Class="invoice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:invoice.Views"
        xmlns:converter="clr-namespace:invoice.Utilities.Converters"
        xmlns:customcontrols="clr-namespace:invoice.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" Height="475" Width="845"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource fontBase}"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Border CornerRadius="15"
            Background="{StaticResource AppBackground}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Margin="15,0,0,0" FontFamily="{StaticResource fontBase}" FontWeight="Light" Foreground="DarkGray" FontSize="12">Connexion</TextBlock>
                </StackPanel>
                <Button Content="X" Grid.Column="2" FontFamily="Cascadia Mono" Foreground="Red" BorderThickness="0" Width="20" Height="20" Command="{Binding CloseWindowCommand}" />
            </Grid>

            <Grid Grid.Row="1" Margin="2,0,-2,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="390" Width="350"    >
                    <Image Source="/Assets/img/logo.png"  Height="125"/>

                    <WrapPanel Margin="5,35,0,0" HorizontalAlignment="center" Orientation="Vertical">
                        <Label FontFamily="{StaticResource fontSen}"  FontWeight="Normal" FontSize="14">Identifiant</Label>

                        <TextBox x:Name="txtUserName" Width="210" HorizontalAlignment="Left" Margin="0,5,0,0" BorderThickness="0,0,0,2" Padding="35,0,0,0" Height="24"  VerticalContentAlignment="Center" 
                             FontWeight="Normal"  FontSize="14" CaretBrush="LightGray" BorderBrush="#04AE9C" FontFamily="{StaticResource fontSen}" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Assets/img/user-icon01.png" Stretch="None" AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>
                    </WrapPanel>

                    <WrapPanel  Margin="30,15,0,0"
                            HorizontalAlignment="Center" >
                        <WrapPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <Label FontFamily="{StaticResource fontSen}" FontWeight="Normal" FontSize="14">Mots de passe</Label>
                            <Grid>
                                <customcontrols:BindablePasswordBox Margin="0,5,0,0"
                                                                Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                Height="24" 
                                                                Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                                </customcontrols:BindablePasswordBox>
                                <TextBox Height="24"
                                     Background="#ECFFFF"
                                     Width="180"
                                     Margin="35,5,-10,0"
                                     IsReadOnly="True"
                                     FontSize="14"
                                     FontFamily="{StaticResource fontSen}"
                                     FontWeight="Normal"
                                     BorderThickness="0,0,0,2"
                                     BorderBrush="#04AE9C"
                                     Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVisibilityConverter}}"
                                     Text="{Binding Plainpwd, Mode=TwoWay}">

                                </TextBox>
                            </Grid>
                        </WrapPanel>
                        <Button Background="Transparent"
                            VerticalAlignment="Bottom"
                            BorderThickness="0"
                            Margin="5,0,0,5"
                            Command="{Binding ToggleShowPasswordCommand}">
                            <Button.Content>
                                <Image Source="{Binding ShowPasswordIconPath, UpdateSourceTrigger=PropertyChanged}"  
                                   Height="16" />
                            </Button.Content>
                        </Button>
                    </WrapPanel>

                    <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0" Text="{Binding ErrorMessage }" Foreground="DarkOrange" FontSize="12" FontWeight="SemiBold" TextWrapping="Wrap"/>

                    <Button x:Name="btnTryConnexion" Margin="0,25,0,0" Width="150" Height="40" Background="#D3FFFF" Foreground="#000" BorderThickness="0" FontWeight="SemiBold" FontSize="15" HorizontalContentAlignment="Center" FontFamily="{StaticResource fontBase}" Command="{Binding DoLoginCommand}" Click="btnTryConnexion_Click">Connexion</Button>
                </StackPanel>

            </Grid>


        </Grid>
    </Border>
</Window>
