<Window x:Class="invoice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:invoice.Views"
        xmlns:customcontrols="clr-namespace:invoice.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" Height="475" Width="845"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Margin="15,0,0,0" FontFamily="{StaticResource fontBase}" FontWeight="Light" Foreground="DarkGray" FontSize="12">Connexion</TextBlock>
            </StackPanel>
            <Button Content="X" Grid.Column="2" FontFamily="Cascadia Mono" Foreground="Red" BorderThickness="0" Width="20" Height="20" Command="{Binding CloseWindowCommand}" />
        </Grid>

        <Grid Grid.Row="1" Margin="2,0,-2,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="370" Width="350" Margin="0,15,0,0">
                <Image Source="/Assets/img/clima-g-logo.png"  Height="125"/>

                <WrapPanel Margin="5,35,0,0" HorizontalAlignment="center" Orientation="Vertical">
                    <Label FontFamily="{StaticResource fontBase}"  FontWeight="Normal" FontSize="11">Identifiant</Label>

                    <TextBox x:Name="txtUserName" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0" BorderThickness="0,0,0,2" Padding="35,0,0,0" Height="24"  VerticalContentAlignment="Center" FontSize="14" CaretBrush="LightGray" BorderBrush="#04AE9C" FontFamily="{StaticResource fontBase}" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Assets/img/user-icon01.png" Stretch="None" AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                </WrapPanel>

                <WrapPanel Margin="5,15,0,0" HorizontalAlignment="Center" Orientation="Vertical">
                    <Label FontFamily="{StaticResource fontBase}" FontWeight="Normal" FontSize="11">Mots de passe</Label>

                    <customcontrols:BindablePasswordBox Margin="0,5,0,0"
                                                        Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        Height="24" >
                    </customcontrols:BindablePasswordBox>
                </WrapPanel>
                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="{Binding ErrorMessage }" Foreground="OrangeRed" FontSize="12" FontWeight="Light" FontFamily="Cascadia Mono"/>

                <Button x:Name="btnTryConnexion" Margin="0,30,0,0" Width="150" Height="30" Background="#04AE9C" Foreground="#000" BorderThickness="0" FontWeight="SemiBold" FontSize="15" HorizontalContentAlignment="Center" FontFamily="{StaticResource fontBase}" Command="{Binding DoLoginCommand}" Click="btnTryConnexion_Click">Connexion</Button>
            </StackPanel>

            <WrapPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image VerticalAlignment="Bottom" Grid.Column="2" Source="/Assets/img/img1.jpg"/>
            </WrapPanel>
        </Grid>



        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock FontFamily="{StaticResource fontBase}"> Mots de passe oublié ?</TextBlock>

            <TextBlock Cursor="Hand" Margin="10,0,0,0" Foreground="LightGreen" FontWeight="Bold" FontFamily="{StaticResource fontBase}">Cliquer ici</TextBlock>
        </StackPanel>
    </Grid>
</Window>
