<UserControl x:Class="invoice.Views.SubViews.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:invoice.Views.SubViews"
             xmlns:customControl="clr-namespace:invoice.CustomControls"
             mc:Ignorable="d" 
             xmlns:subviewmodels="clr-namespace:invoice.ViewModels.SubViewModels"
             d:DataContext="{d:DesignInstance Type=subviewmodels:UsersVM}"
             xmlns:converter="clr-namespace:invoice.Utilities.Converters"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:BoolToUserStatus x:Key="BoolToUserStatus" />
        <customControl:AddUserForm x:Key="AddUserForm" DataContext="{Binding}" PasswordSecure="{Binding PasswordSecureString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <customControl:EditUserForm x:Key="EditUserForm" DataContext="{Binding}" PasswordSecure="{Binding PasswordSecureString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Correction : style local pour DataGridRow qui utilise IsActive (remplace tout binding vers Status) -->
        <Style x:Key="DataGridRowStyle1" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <!-- Utilise IsActive, pas Status -->
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#FFF7FFFA"/>
                    <Setter Property="Opacity" Value="1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Opacity" Value="0.8"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EAF6FF"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SegmentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderThickness="2"
                        BorderBrush="{StaticResource PrimaryBlue}"
                        Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BEE6FD" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SegmentButtonDelete" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceRed}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryRedDark}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryRedDark}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}"
                                        CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundRed}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource LightGray}"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SegmentButtonUpdate" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceOrange}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkOrange"/>
            <Setter Property="Foreground" Value="DarkOrange"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundRed}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource LightGray}"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <!-- RootGrid nommé pour être utilisé dans les animations -->
    <Grid x:Name="RootGrid"
          Margin="100,0,25,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>


        <!-- Header content-->
        <Border Padding="0"
                Grid.Row="0"
                Margin="10"
                Background="Transparent"
                CornerRadius="5"
                BorderThickness="2"
                BorderBrush="#3583CF">
            
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left-->
                <Border Grid.Column="0" 
                        Margin="10,10,0,10"
                        BorderThickness="0,0,2,0"
                        BorderBrush="#3583CF">
                    <WrapPanel 
                               VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <Image Source="/Assets/icons/users-enable.png"
                               Width="64"/>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center"
                                    Margin="20,0,0,0">
                            <TextBlock Text="{Binding TotalActifUsersCount}"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#666666"/>
                            <TextBlock Text="Actif"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        </StackPanel>
                    </WrapPanel>
                    
                </Border>
                <!-- Right-->
                <Border Grid.Column="1" 
                        Margin="10,10,0,10">
                    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        
                        <!-- 1-->
                        <WrapPanel Margin="75,0,0,0">
                            <Image Source="/Assets/icons/users-group.png"
                                   Width="64"/>
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Margin="20,0,0,0">
                                <TextBlock Text="{Binding TotalUsersCount}"
                                           HorizontalAlignment="Center"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Text="Enregistré"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#333333"/>
                            </StackPanel>
                        </WrapPanel>
                        <!-- 2-->
                        <StackPanel VerticalAlignment="Center"
                                    Margin="150,0,0,0">
                            <!-- gestionnaire Click ajouté -->
                            <Button Tag="showForm" Content="Ajouter un utilisateur" Style="{StaticResource SegmentButton}" Click="ShowFormButton_Click"/>
                            <!-- Supprimer-->
                            <Button Content="Supprimer"
                                    Margin="0,10,0,0"
                                    Style="{StaticResource SegmentButtonDelete}"
                                    Command="{Binding DeleteUserCommand}"/>
                            <!-- Modifier-->
                            <Button Content="Modifier"
                                    Margin="0,10,0,0"
                                    Style="{StaticResource SegmentButtonUpdate}"
                                    Click="ShowFormEditButton_Click"
                                    Command="{Binding LoadSelectedUserDataCommand}"/>
                        </StackPanel>
                    </WrapPanel>
                    
                </Border>
            </Grid>
        </Border>

        <!-- Main content-->
        <Border Padding="0"
                Grid.Row="1"
                Margin="10,0,10,0"
                Background="Transparent"
                CornerRadius="5"
                BorderThickness="0,0,0,2"
                BorderBrush="#F6F6F6">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Main content Header-->
                <Border Grid.Row="0"
                        BorderThickness="0,0,0,2"
                        BorderBrush="{StaticResource SurfaceBlue}">
                    <WrapPanel HorizontalAlignment="Right">
                        <!-- Refresh btn-->

                        <Button Style="{StaticResource TabButtonStyle2}"
                                Command="{Binding LoadUsersCommand}"
                                Margin="0,0,0,10">
                            <Image Source="/Assets/icons/refresh.png" 
                                    Width="24" 
                                   />
                        </Button>
                    </WrapPanel>
                </Border>
                <!-- Main content body-->
                <DataGrid Grid.Row="1"
                          Focusable="False"
                          RowStyle="{StaticResource DataGridRowStyle1}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                          Style="{DynamicResource specialDataGrid}" 
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                          Background="Transparent"
                          Height="325"
                          Margin="0,25,0,0"
                          BorderThickness="0,0,0,0"
                          BorderBrush="#F6F6F6" 
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False" 
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom  complet" Binding="{Binding FullName}" Width="2*"/>
                        <DataGridTextColumn Header="Identifiant" Binding="{Binding Account_name}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                        <DataGridTextColumn Header="Tel. 1" Binding="{Binding Phone_number_one}" Width="*"/>
                        <DataGridTextColumn Header="Rôle" Binding="{Binding Role.Role_name}" Width="*"/>
                        <DataGridTextColumn Header="Dernière. cnx" Binding="{Binding LastConnection}" Width="auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding IsActive, Converter={StaticResource BoolToUserStatus}}" Width="*" 
                                            CellStyle="{DynamicResource DataGridCell2}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Overlay absolu pour AddUserForm (toujours au-dessus, n'affecte pas la disposition) -->
        <Grid x:Name="OverlayHost"
              Grid.Row="0"
              Grid.RowSpan="2"
              Visibility="Collapsed"
              IsHitTestVisible="True"
              Panel.ZIndex="9999"
              Background="Transparent">
            <!-- Fond semi-transparent (opacité animée) -->
            <Border x:Name="OverlayBackground"
                    Visibility="Visible"
                    Background="LightGray"
                    Opacity="0.05"
                    CornerRadius="10"/>
            <!-- Contenu centré ; le contrôle inséré ici aura son propre TranslateTransform animé -->
            <ContentControl x:Name="OverlayContent"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{DynamicResource AddUserForm}"
                            />
        </Grid>
        <!-- Overlay absolu pour EditUserForm (toujours au-dessus, n'affecte pas la disposition) -->
        <Grid x:Name="OverlayHostEdit"
              Grid.Row="0"
              Grid.RowSpan="2"
              Visibility="Collapsed"
              IsHitTestVisible="True"
              Panel.ZIndex="9999"
              Background="Transparent">
            <!-- Fond semi-transparent (opacité animée) -->
            <Border x:Name="OverlayBackgroundEdit"
                    Visibility="Visible"
                    Background="LightGray"
                    Opacity="0.05"
                    CornerRadius="10"/>
            <!-- Contenu centré ; le contrôle inséré ici aura son propre TranslateTransform animé -->
            <ContentControl x:Name="OverlayContentEdit"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{DynamicResource EditUserForm}"
                            />
        </Grid>
    </Grid>
</UserControl>
