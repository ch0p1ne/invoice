<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:viewmodels="clr-namespace:invoice.ViewModels"
                    xmlns:custom="clr-namespace:invoice.Utilities"
                    xmlns:view="clr-namespace:invoice.Views">

    <DataTemplate DataType="{x:Type viewmodels:HomeVM}">
        <view:HomeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:NewInvoiceVM}">
        <view:NewInvoiceView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:ExamenVM}">
        <view:ExamenView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewmodels:CreateFactureVM}">
        <view:CreateFactureView />
    </DataTemplate>

    <DataTemplate x:Key="CrudListTemplate">
        <view:ListExamenView  DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=view:ExamenView}}"/>
    </DataTemplate>
    <DataTemplate x:Key="CrudCreateTemplate">
        <view:CreateExamenView  DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=view:ExamenView}}"/>
    </DataTemplate>
    <custom:TemplateSelector x:Key="StringTemplateSelector"
                                       CrudListTemplate="{StaticResource CrudListTemplate}"
                                       CrudCreateTemplate="{StaticResource CrudCreateTemplate}" />
</ResourceDictionary>